{% extends '@TimeMachine/base.html.twig' %}

{% block body %}
	<style>
		.table {
			vertical-align: middle;
			border-radius: .25rem;
			overflow: hidden;
		}

		.table::after {
			content: '';
			box-shadow: inset 1px 0 0 0 red;
		}
	</style>

	<h1 class="display-6">Entities</h1>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>{{ 'Name' | trans }}</th>
				<th>{{ 'Entry Count' | trans }}</th>
				<th>{{ 'Action' | trans }}</th>
			</tr>
		</thead>
		<tbody>
			{% for entity in entities %}
				<tr>
					<td>{{ entity }}</td>
					<td>{{ 574 }}</td>
					<td>
						<a href="{{ url('time_machine_show', {entity: entity}) }}" class="btn btn-sm btn-primary w-100">{{ 'View' | trans }}</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}